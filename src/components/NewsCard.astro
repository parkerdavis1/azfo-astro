---
import { Image } from 'astro:assets';

const {
    slug,
    body,
    data: { title, image, blurb, link },
} = Astro.props.data;

const { Content } = await Astro.props.data.render();
---

<Image src={image} width={100} alt="alt" />
<h3>
    {link ? <a href={link}>{title}</a> : title}
</h3>
<Content />
